{
  "name": "@nsw/express-starter",
  "version": "1.0.0",
  "description": "Express Starter with GraphQL, Prisma, Postgresql",
  "private": true,
  "author": {
    "name": "Nay Soewin",
    "email": "naysoewin9@gmail.com"
  },
  "scripts": {
    "serve": "nodemon dist/server.js",
    "tsc:watch": "tsc -w",
    "dev": "yarn build && concurrently -k -p \"[{name}]\" -n \"tsc,nodemon\" -c \"cyan.bold,green.bold\" \"yarn tsc:watch\" \"yarn serve\"",
    "build": "tsc",
    "test": "jest",
    "generate": "graphql-codegen --config codegen.yml"
  },
  "prisma": {
    "seed": "ts-node --compiler-options {\"module\":\"CommonJS\"} src/database/seeds/index.ts"
  },
